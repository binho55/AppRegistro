<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.opet.tds.appregistro.MainActivity">


    <EditText
        android:id="@+id/editFilme"
        android:hint="Nome do Filme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/editGenero"
        android:hint="Genero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/SpinnerNota"
        android:entries="@array/lista_nota"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"


    />
    <Button
        android:onClick="salvarArtista"
        android:id="@+id/btnSalvar"
        android:text="Salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/listArtista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
